---
stylesheets:
- ../../scss/index.scss
---
{{!< base}}

<main>
    <div class="data-entry-field">
        <h1>Change password</h1>
        {{> input className="input__main-input" pholderText="Old password" }}
        {{> input className="input__main-input" pholderText="New password" }}
        {{> input className="input__main-input" pholderText=data.sec_pholders.rpassword }}
        <div class="button__row-container">
            {{> linkbutton 
                className="button__secondary-setting-button rounding"
                btnText="Back to settings"
                linkName="./index.hbs"
            }}
            {{> linkbutton className="button__primary-button rounding"
                btnText="Save"
                linkName="./index.hbs"
            }}
        </div>
    </div>
</main>