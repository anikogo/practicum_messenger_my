---
stylesheets:
- ../../scss/index.scss
---
{{!< base}}

<main>
    <div class="data-entry-field">
        <h1>Settings</h1>
        <div class="input__column-container">
            <div class="settings__user-container">
                <a class="settings__user-pic" href="./changepic.hbs"></a>
                <div class="input__column-container">
                    {{> input className="input__main-input" pholderText=data.reg_pholders.fname }}
                    {{> input className="input__main-input" pholderText=data.reg_pholders.sname }}
                </div>
            </div>
            {{> input className="input__main-input" pholderText="Display name" }}
            {{> input className="input__main-input" pholderText=data.reg_pholders.email }}
            {{> input className="input__main-input" pholderText=data.reg_pholders.phone }}
        </div>
        <div class="button__row-container">
            {{> linkbutton 
                className="button__secondary-setting-button"
                btnText="Change password"
                linkName="./changepwd.hbs"
            }}
            {{> linkbutton className="button__primary-button"
                btnText="Save"
                linkName="../chat/index.hbs"
            }}
        </div>
    </div>
</main>